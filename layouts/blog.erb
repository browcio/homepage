<% render 'headers' do %>

      <div class="navigation">
        <ul class = "navigation">
          <li><%= link_to_unless_current("Blog", @items["/blog/"]) %></li>
        </ul>
      </div>

      <div class="right">
<img src = "/images/r_debconf4_tbm2.jpg" class="border" alt="Martin Michlmayr" width="148" height="153" />

<p>

I'm a member of Debian and serve on the boards of Software Freedom
Conservancy and Software in the Public Interest.

</p>

<p>

<a href = "/blog/feed/">Subscribe</a> to the RSS feed of this blog.

</p>
      </div>

      <%= render 'nav-bar' %>

      <div class="content">
      <%= yield %>

        <% unless @item[:hide_time] then %>
        <div class="footer">
        <% if @item[:created_at] %>
        Created on <%= @item[:created_at].strftime "%Y-%m-%d %T %z" %>.
        <% else %>
        Last modified on <%= @item[:mtime].strftime "%Y-%m-%d %T %z" %>.
        <% end %>
        </div>
        <% end %>

      </div>

<% end %>
